datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

model SemanticModel {
  databaseName  String        @id
  modelName     String
  serverAddress String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  analysisRuns  AnalysisRun[]
}

model AnalysisRun {
  id                String            @id @default(cuid())
  modelDatabaseName String
  semanticModel     SemanticModel     @relation(fields: [modelDatabaseName], references: [databaseName], onDelete: Cascade)
  modelName         String
  startedAt         DateTime          @default(now())
  completedAt       DateTime?
  status            String            @default("RUNNING")
  errorCount        Int               @default(0)
  warningCount      Int               @default(0)
  infoCount         Int               @default(0)
  findings          Finding[]
  chatFixSessions   ChatFixSession[]
  autofixRuns       AutofixRun[]
}

model Finding {
  id              String       @id @default(cuid())
  analysisRunId   String
  analysisRun     AnalysisRun  @relation(fields: [analysisRunId], references: [id], onDelete: Cascade)
  ruleId          String
  ruleName        String
  category        String
  severity        Int
  description     String
  affectedObject  String
  objectType      String
  fixStatus       String       @default("UNFIXED")
  fixSummary      String?
  hasAutoFix      Boolean      @default(false)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  autofixRuns     AutofixRun[]
}

model AutofixRun {
  id              String       @id @default(cuid())
  analysisRunId   String
  analysisRun     AnalysisRun  @relation(fields: [analysisRunId], references: [id], onDelete: Cascade)
  findingId       String
  finding         Finding      @relation(fields: [findingId], references: [id], onDelete: Cascade)
  ruleId          String
  status          String       @default("PENDING")
  scriptContent   String?
  output          String?
  startedAt       DateTime     @default(now())
  completedAt     DateTime?
}

model DaxQuery {
  id              String   @id @default(cuid())
  queryText       String
  naturalLanguage String?
  status          String   @default("PENDING")
  resultData      String?
  rowCount        Int?
  executionTimeMs Int?
  errorMessage    String?
  createdAt       DateTime @default(now())
}

model ChatFixSession {
  id               String           @id @default(cuid())
  ruleId           String
  analysisRunId    String
  analysisRun      AnalysisRun      @relation(fields: [analysisRunId], references: [id], onDelete: Cascade)
  copilotSessionId String?
  status           String           @default("ACTIVE")
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  messages         ChatFixMessage[]

  @@index([ruleId, analysisRunId, status])
}

model ChatFixMessage {
  id               String         @id @default(cuid())
  chatFixSessionId String
  chatFixSession   ChatFixSession @relation(fields: [chatFixSessionId], references: [id], onDelete: Cascade)
  role             String
  content          String
  toolName         String?
  proposalId       String?
  approvalStatus   String?
  ordering         Int
  timestamp        DateTime       @default(now())
}
